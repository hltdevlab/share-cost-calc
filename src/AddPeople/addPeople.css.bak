.add-people {
    /* variables */
    --color-bg: white;
}

.add-people {
    position: relative;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    margin: auto;
    padding: 20px;
    width: 300px;
    border: 1px solid black;
    border-radius: 20px;
    line-height: 2rem;
}

.add-people__lbl {
    display: flex;
    flex-direction: column;
    margin-bottom: 1rem;
}

.add-people__lbl-span {
    text-align: left;
}

.add-people__input-txt {
    line-height: 2rem;
}

.add-people__btn {
    margin-top: 1rem;
    line-height: 2rem;
}

.add-people__input-err-msg {
    height: 2rem;
    color: red;
}

.add-people__input-txt--err {
    box-shadow:
        0 0 0 2px var(--color-bg),
        0 0 0 4px red;
}
